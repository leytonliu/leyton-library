{
  "name": "leyton-library",
  "private": true,
  "version": "0.1.5",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build --workspaces",
    "build:root": "tsc && vite build",
    "prepublishOnly": "npm run build:root",
    "release": "bash scripts/release.sh",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "mcp-server": "node scripts/mcp-server.js",
    "clean": "rm -rf dist types packages/*/dist packages/*/types",
    "install:all": "npm install",
    "publish:all": "npm run build && npm publish --workspaces",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major"
  },
  "files": [
    "dist",
    "types",
    "scripts"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.umd.cjs"
  },
  "bin": {
    "leyton-mcp": "scripts/mcp-server.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "dependencies": {
    "@leyton/tools": "workspace:*",
    "@leyton/cli": "workspace:*",
    "@leyton/const": "workspace:*",
    "@leyton/miniprogram": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "semver": "^7.7.2",
    "typescript": "~5.9.2",
    "vite": "^7.0.6",
    "vitest": "^2.1.2"
  }
}
