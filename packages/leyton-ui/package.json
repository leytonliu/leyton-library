{
  "name": "@leyton/ui",
  "version": "0.0.3",
  "type": "module",
  "description": "Shared UI components for leyton-library based on Vue 3",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "types": "./types/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.umd.cjs"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "vue-tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.6",
    "vitest": "^2.1.2",
    "vue": "^3.3.0",
    "vue-tsc": "^2.0.0"
  },
  "dependencies": {
    "@leyton/tools": "workspace:*"
  }
}
